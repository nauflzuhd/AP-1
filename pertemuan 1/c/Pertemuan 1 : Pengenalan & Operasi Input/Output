#include <stdio.h> // header untuk C
#include <conio.h> // header untuk gets, getch, getche

int main() {
    char nama[50]; // variabel nama bertipe data char maksimal 50
    int nim; // variabel nim bertipe data integer
    char kom[2]; // variabel kom bertipe data char maksimal 2
    float ip; // variabel ip bertipe data float

    printf("Hello World\n"); // fungsi keluaran pada C

    printf("Masukkan nama : "); 
    gets(nama); // get string

    printf("Masukkan nim : ");
    scanf("%d", &nim); // fungsi masukan pada C bertipe data integer

    getchar(); // mengambil satu karakter

    printf("Masukkan kom : "); // output 
    gets(kom);  //get string, input string kom

    printf("Masukkan ip : "); // output
    scanf("%f", &ip); //input float

    /* Untuk Output */
    printf("Nama : "); // output
    puts(nama); // put string, digunakan untuk string dalam bentuk array char

    printf("NIM : %d\n", nim); // output nim

    printf("KOM : "); // output
    puts(kom);  // output kom
    printf("IP : %f\n", ip); // output ip

    printf("press any button to continue..."); // output
    getch(); // mengambil satu karakter tanpa ditampilkan
}
